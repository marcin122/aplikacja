{% extends 'base.html.twig' %}

{% block body %}

    <div id="loginForm">

    {% if error %}
        <div style="color: red; margin-left: 10px">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">
        {#<label for="username">Username:</label>#}
        <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Login" /><br>

        {#<label for="password">Password:</label>#}
        <input type="password" id="password" name="_password" placeholder="Hasło" /><br>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
        <button type="submit">Zaloguj się</button>
    </form>
    </div>

{% endblock %}

{% block stylesheets %}
    <style>
        #loginForm{
            width: 220px;
            height: 170px;
            margin-left: auto;
            margin-right: auto;
            margin-top: auto;
            margin-bottom: auto;
            margin-top: 10%;
        }input{
             width: 200px;
             padding: 15px;
             margin: 10px 10px 5px 10px;
             outline: none;
             box-sizing: border-box;
             border: 3px solid #99CDD8;
             transition: 0.5s;
             outline: none;
         }

        input:focus{
            border: 3px solid #479aff;
        }
        button{
            color: white;
            padding: 15px;
            background-color: #99CDD8;
            transition: 0.3s;
            border: 1px;
            border-color: #99CDD8;
            border-style: solid;
            margin: 10px 10px 5px 10px;
        }
        button:hover{
            background-color: white;
            color: #99CDD8;
            cursor: pointer;
        }

    </style>

{% endblock %}

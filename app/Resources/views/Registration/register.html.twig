{% extends 'base.html.twig' %}

{% block body %}
    <div id="registerForm">
    {{ form_start(form) }}
        {{ form_row(form.username, {'attr': {'placeholder': 'Podaj login'} }) }}
        {{ form_row(form.email, {'attr': {'placeholder': 'Podaj email'} }) }}
        {{ form_row(form.plainPassword.first, {'attr': {'placeholder': 'Podaj hasło'} }) }}
        {{ form_row(form.plainPassword.second, {'attr': {'placeholder': 'Powtórz hasło'} }) }}
        {{ form_row(form.name, {'attr': {'placeholder': 'Podaj imie'} }) }}
        {{ form_row(form.secondName, {'attr': {'placeholder': 'Podaj nazwisko'} }) }}
        {{ form_row(form.address, {'attr': {'placeholder': 'Podaj adres'} }) }}
        <button type="submit">Zarejestruj użytkownika</button>
    {{ form_end(form) }}
        <a href="{{ path('user_index') }}"><button>Powrót do listy</button></a>
    </div>
{% endblock %}

{% block stylesheets %}
<style>
    #registerForm{
        width: 320px;
        height: 530px;
        margin-left: auto;
        margin-right: auto;
    }
    input{
        width: 300px;
        padding: 15px;
        margin: 10px 10px 5px 10px;
        outline: none;
        box-sizing: border-box;
        border: 3px solid #99CDD8;
        transition: 0.5s;
        outline: none;
    }

    input:focus{
        border: 3px solid #479aff;
    }
    button{
        color: white;
        padding: 15px;
        background-color: #99CDD8;
        transition: 0.3s;
        border: 1px;
        border-color: #99CDD8;
        border-style: solid;
        margin: 10px 10px 5px 10px;
    }
    button:hover{
        background-color: white;
        color: #99CDD8;
        cursor: pointer;
    }
</style>
{% endblock %}
